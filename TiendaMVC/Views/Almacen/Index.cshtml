@using System.Collections.Specialized
@using TiendaMVC.Models
@model System.Collections.Generic.IEnumerable<TiendaMVC.Models.Almacen>

@{
    ViewBag.Title = "Index";
}

<h2>Listado de Almacenes</h2>

@foreach (var item in Model)
{
    @Html.Partial("_fichaAlmacen",item)
}


@section MiJavaScript
{
    <script>
        $(".borrame").click(function() {
            var r = confirm("Estas seguro?");
            if (r) {
                var id = $(this).attr("data-id");
                location.href = "@Url.Action("Borrar")" + "/" +id;
            }
        });
    </script>
}
